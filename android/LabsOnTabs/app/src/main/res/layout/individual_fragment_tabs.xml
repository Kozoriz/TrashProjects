<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/background_light"
    android:clickable="false">

    <TextView
        android:text="Convert: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/section_label"
        android:id="@+id/convert_from_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/convert_from_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/currency_value_1_field"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/currency_value_1_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/currency_value_2_field"
        android:clickable="false" />

    <TextView
        android:text="To :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convert_to_label"
        android:layout_below="@+id/currency_value_1_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currency_1_spinner"
        android:layout_above="@+id/convert_to_label"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/currency_2_spinner"
        android:layout_alignBottom="@+id/currency_value_2_field"
        android:layout_alignStart="@+id/currency_1_spinner"
        android:layout_width="wrap_content" />

    <Button
        android:text="Convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currency_value_2_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/currency_convert_button" />

</RelativeLayout>
